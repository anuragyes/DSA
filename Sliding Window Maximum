// User function template for C++

class Solution {
  public:
    // Function to find maximum of each subarray of size k.
    vector<int> maxOfSubarrays(vector<int>& nums, int k) {
    vector<int> result;
    deque<int> dq; // Will store indices of potential max elements
    
    for (int i = 0; i < nums.size(); i++) {
        // Remove indices that are out of the bounds of the window
        if (!dq.empty() && dq.front() < i - k + 1) {
            dq.pop_front();
        }
        
        // Remove elements from the back of the deque while current element is greater
        // than those elements. They won't be the max in any future window.
        while (!dq.empty() && nums[dq.back()] <= nums[i]) {
            dq.pop_back();
        }
        
        // Add the current element's index to the deque
        dq.push_back(i);
        
        // Once we have processed the first `k` elements, start adding to the result
        if (i >= k - 1) {
            result.push_back(nums[dq.front()]);
        }
    }
    
    return result;
    }
};
