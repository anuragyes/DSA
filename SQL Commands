CREATE DATABASE collage;
USE collage ;

CREATE TABLE student(
id INT PRIMARY KEY,
name VARCHAR(50),
age INT NOT NULL
);
INSERT INTO student VALUES (1 , "anurag pandey" , 16);
INSERT INTO student VALUES (2 , "sachin pandey" , 86);
INSERT INTO student VALUES (3 , "rohit pandey" , 36);
INSERT INTO student (id,age) VALUES (8 , 39);
INSERT INTO student  (name , age , id ) VALUES ("helo" , 39 , 90); -- order of sending data and  their values should be same 
INSERT INTO student   VALUES (30,"anura",26);  -- smaller version if we know the order of schemas
 SELECT * FROM student;
 
