  --  lest begin for level up in sql 
  CREATE DATABASE SAMPLE;
  USE sample;
  
CREATE TABLE student(
rollnumber INT PRIMARY KEY ,
name VARCHAR(50),
marks INT NOT NULL,
grade VARCHAR(10),
city VARCHAR(10)
);


INSERT INTO STUDENT (rollnumber,name,marks,grade,city) VALUES 
(101 ,"anu",200,"A","satna"),
(102 ,"pandey",200,"C","stna"),
(103 ,"dev",200,"A","sa"),
(104 ,"ram",200,"D","sat");
SELECT * FROM STUDENT;  --   select all 
SELECT grade FROM STUDENT; --  select only values to get only that value  
SELECT DISTINCT city FROM STUDENT;    -- to get unique city value using distinct 




  -- lest discuss about other methods  CLAUSE  : WHERE
  
SELECT * FROM STUDENT WHERE marks > 205;  
SELECT * FROM STUDENT WHERE city = "sa"; 

--  we use so many operators with WHERE like Arithmetic operators ,compariosn operort ,logical ,bitwise;
-- logcal operator means  AND , OR ,NOT , IN, BETWEEN ,ALL , LIKE ,ANY

SELECT * FROM STUDENT WHERE marks+5 = 205; 


-- operators 
SELECT * FROM STUDENT WHERE MARKS>100 OR CITY = "sa"; 
SELECT * FROM STUDENT WHERE   marks BETWEEN 100 AND 200;   -- range in the list 
SELECT * FROM STUDENT WHERE city IN ("sa" , "sat"); --  match any val in the list  
SELECT * FROM STUDENT WHERE city  NOT IN ("sa" , "sat"); -- to neglate these in the lsit  
SELECT * FROM STUDENT WHERE marks >190 LIMIT 2;

-- ORDER BY CLAUSE means accending order or desending order -- 
SELECT * FROM STUDENT ORDER BY city;  -- ydefault its gives us acending order 
SELECT * FROM STUDENT ORDER BY city ASC;    -- acending order 
SELECT * FROM STUDENT ORDER BY city DESC ;    -- dcending order -- 

  
